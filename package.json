{
  "name": "@vralle/node-workspace",
  "version": "0.3.4",
  "type": "module",
  "workspaces": [
    "projects/*"
  ],
  "engines": {
    "node": ">=v20.12.0"
  },
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "format": "dprint check",
    "lint:js": "eslint --fix-dry-run --cache --cache-location .cache/.eslintcache .",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!**/node_modules/**\"",
    "lint:spelling": "cspell lint --show-context .",
    "test": "vitest run --pool=forks --testTimeout 10000"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9",
    "@dprint/json": "^0.20",
    "@dprint/typescript": "^0.95",
    "@eslint/js": "^9.26",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@vitest/eslint-plugin": "^1.1.44",
    "cspell": "^9.0",
    "dprint": "^0.49",
    "eslint": "^9.26",
    "eslint-plugin-jsdoc": "^50.6.11",
    "globals": "^16.0",
    "malva": "^0.12",
    "markdownlint-cli2": "^0.17",
    "postcss": "^8.5",
    "postcss-html": "^1.8",
    "stylelint": "^16.19",
    "stylelint-config-html": "^1.1",
    "stylelint-config-standard": "^38.0",
    "stylelint-config-standard-scss": "^14.0",
    "typescript-eslint": "^8.32",
    "vitest": "^3.1"
  }
}
