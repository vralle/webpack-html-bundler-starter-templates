{
  "name": "@vralle/node-workspace",
  "version": "0.3.4",
  "workspaces": [
    "projects/*"
  ],
  "engines": {
    "node": ">=v20.12.0"
  },
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "format": "dprint check",
    "lint:js": "eslint --fix-dry-run --cache --cache-location .cache/.eslintcache .",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!**/node_modules/**\"",
    "lint:spelling": "cspell lint --show-context .",
    "test": "jest"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@dprint/json": "^0.20.0",
    "@dprint/typescript": "^0.95.0",
    "@eslint/js": "^9.21",
    "@jest/globals": "^29.7.0",
    "cspell": "^8.19",
    "dprint": "^0.49",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "malva": "^0.12",
    "markdownlint-cli2": "^0.17",
    "postcss": "^8.5",
    "postcss-html": "^1.8",
    "stylelint": "^16.19",
    "stylelint-config-html": "^1.1",
    "stylelint-config-standard": "^38.0",
    "stylelint-config-standard-scss": "^14.0",
    "ts-jest": "^29.3",
    "typescript-eslint": "^8.31"
  }
}
