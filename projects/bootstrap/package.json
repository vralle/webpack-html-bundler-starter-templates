{
  "name": "bootstrap-example",
  "version": "0.3.1",
  "description": "Example webpack project for compiling HTML stats pages",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm-run-all --sequential build:webpack lint:html",
    "build:public": "export PUBLIC_URL=\"https://example.site/\" && npm run build",
    "build:webpack": "webpack build --node-env production --config webpack.config.mjs",
    "start": "webpack serve --config webpack.config.mjs --node-env development",
    "format": "dprint check",
    "lint": "npm-run-all --aggregate-output --parallel lint:styles lint:js lint:spelling lint:md",
    "lint:js": "eslint --fix-dry-run --cache --cache-location .cache/.eslintcache .",
    "lint:styles": "stylelint \"src/**/*.{css,scss,html}\" --cache --cache-location .cache/.stylelintcache",
    "lint:html": "node scripts/nu-html-checker.mjs",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!node_modules\"",
    "lint:spelling": "cspell lint --show-context  \"**/*.{html,md}\""
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@types/bootstrap": "^5.2.10",
    "@vralle/nu-html-checker": "^0.2.1",
    "@vralle/tool-configs": "^0.3.0",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "glob": "^11.0.1",
    "html-bundler-webpack-plugin": "^4.18.0",
    "image-minimizer-webpack-plugin": "^4.1.3",
    "markdownlint-cli2": "^0.17.2",
    "mini-svg-data-uri": "^1.4.4",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "sass-embedded": "^1.85.0",
    "sass-loader": "^16.0.5",
    "sharp": "^0.34.0",
    "stylelint-config-twbs-bootstrap": "^16.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3"
  }
}
