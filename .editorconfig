root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[Dockerfile]
indent_style = spaces
indent_size = 4
insert_final_newline = false

[*.{php,html,twig}]
indent_style = space
indent_size = 4

[*.{cmd,bat,txt}]
indent_style = tab
end_of_line = crlf
